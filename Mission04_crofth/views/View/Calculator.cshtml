@{
    ViewData["Title"] = "Grade Calculator";
}

<h1>Grade Calculator</h1>
<form method="post">
    <label>Assignments</label>
    <input id="inptAssignments" name="Assignments"/><br />
    <label>Group Project</label>
    <input id="inptGroupProject" name="Group Project"/><br />
    <label>Quizzes</label>
    <input id="inptQuizzes" name="Quizzes"/><br />
    <label>Midterm Exam</label>
    <input id="inptMidtermExam" name="Midterm Exam"/><br />
    <label>Final Exam</label>
    <input id="inptFinalExam" name="Final Exam"/><br />
    <label>INTEX</label>
    <input id="inptINTEX" name="INTEX"/><br />
    <input id="btnCalculate" type="submit" value="Calculate" />
</form>
<h4 id="calculatedGrade">Calculated Grade:</h4>

